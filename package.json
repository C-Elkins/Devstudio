{
  "name": "devstudio-monorepo",
  "version": "1.0.0",
  "description": "DevStudio Full-Stack Application",
  "scripts": {
    "setup": "chmod +x setup.sh && ./setup.sh",
    "gui": "bash scripts/gui.sh",
    "gui:install": "bash scripts/gui-install.sh",
    "old-gui": "bash open-gui.sh",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm start",
    "start": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "install:all": "bash scripts/install-all.sh",
    "build": "cd frontend && npm run build",
    "start:prod": "cd backend && npm start",
    "test": "cd backend && npm test && cd ../frontend && npm test"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "keywords": [
    "react",
    "node",
    "mongodb",
    "fullstack"
  ],
  "author": "Chase Elkins",
  "license": "MIT",
  "dependencies": {
    "fast-glob": "^3.3.3",
    "playwright": "^1.55.1"
  }
}
